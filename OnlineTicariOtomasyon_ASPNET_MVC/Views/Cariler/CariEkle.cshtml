@using OnlineTicariOtomasyon_ASPNET_MVC.Models.Siniflar
@{
    ViewBag.Title = "CariEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model Cariler
<link href="~/Content/style.css" rel="stylesheet" />
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Scripts/SweetAlertEkle.js"></script>
<br />
<div class="container-fluid">
    <h2>Cari Ekleme</h2>
    <hr />
    <form class="form-group" method="POST">
        <div class="form-group">
            <label class="labelAciklama">Cari Ad</label>
            @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="labelAciklama">Cari Soyad</label>
            @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="labelAciklama">Cari Şehir</label>
            @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="labelAciklama">Cari Mail</label>
            @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="labelAciklama">Cari Şifre</label>
            @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button id="Button3" runat="server" class="btn btn-primary btn-block" onclick="return conFunction(this);">
                Ekle
            </button>
        </div>
    </form>
</div>

@using OnlineTicariOtomasyon_ASPNET_MVC.Models.Siniflar
@{
    ViewBag.Title = "SatisGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="~/Content/style.css" rel="stylesheet" />
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Scripts/SweetAlertGuncelle.js"></script>
@model SatisHareket
<br />
<div class="container">
    <h2>Satış Güncelleme Sayfası</h2>
    <hr />
    @using (Html.BeginForm("SatisGuncelle", "Satis", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.Durum)
        <div class="form-group">
            <label class="labelAciklama">Satış ID</label>
            @Html.TextBoxFor(x => x.SatisID, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            <label class="labelAciklama"></label>
            @Html.DropDownListFor(x => x.UrunID, (List<SelectListItem>)ViewBag.urun, new { @class = "form-control", @style = "background-color: #f5f0f0" })
        </div>
        <div class="form-group">
            <label class="labelAciklama"></label>
            @Html.DropDownListFor(x => x.CariID, (List<SelectListItem>)ViewBag.cari, new { @class = "form-control", @style = "background-color: #f5f0f0" })
        </div>
        <div class="form-group">
            <label class="labelAciklama"></label>
            @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>)ViewBag.personel, new { @class = "form-control", @style = "background-color: #f5f0f0" })
        </div>
        <div class="form-group">
            <label class="labelAciklama">Adet</label>
            @Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="labelAciklama">Fiyat</label>
            @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="labelAciklama">Toplam Tutar</label>
            @Html.TextBoxFor(x => x.ToplamTutar, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="labelAciklama">Tarih</label>
            @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button runat="server" class="btn btn-primary btn-block" onclick="return conFunction(this);">
                Güncelle
            </button>
        </div>
    }
</div>








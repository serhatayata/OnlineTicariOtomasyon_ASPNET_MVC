@using OnlineTicariOtomasyon_ASPNET_MVC.Models.Siniflar
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model List<SatisHareket>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Scripts/SweetAlertSil.js"></script>

<style>
    .tbl_satis {
        margin-top: 40px;
    }
</style>
<div class="container-fluid tbl_satis">
    <h2>Satışlar (Toplam İşlem Sayısı : @ViewBag.ToplamSatisSayisi)</h2>
    <hr />
    <table class="table table-striped" id="tbl1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ürün</th>
                <th>Cari</th>
                <th>Personel</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Toplam</th>
                <th>Tarih</th>
                <th>Sil</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SatisID</td>
                    <td>@item.Urunler.UrunAd</td>
                    <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
                    <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                    <td>@item.Adet</td>
                    <td>@item.Fiyat</td>
                    <td>@item.ToplamTutar</td>
                    <td>@item.Tarih.ToShortDateString()</td>
                    <td><a href="/Satis/SatisSil/@item.SatisID" id="Button3" runat="server" class="btn btn-danger btn-block" onclick="return conFunction(this);">Sil</a></td>
                    <td><a href="/Satis/SatisGetir/@item.SatisID" class="btn btn-success btn-block">Güncelle</a></td>
                    <td><a href="/Satis/SatisDetay/@item.SatisID" class="btn btn-dark btn-block">Detay</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" href="/Satis/YeniSatis">Yeni Satış Yap</a>
</div>



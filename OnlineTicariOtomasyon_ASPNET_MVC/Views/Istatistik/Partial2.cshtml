@using OnlineTicariOtomasyon_ASPNET_MVC.Models.Siniflar

@model List<Cariler>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header"">
                <h3 class="card-title">Cariler Tablosu</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0" style="height:300px">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Mail</th>
                            <th>Şehir</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CariID</td>
                                <td>@item.CariAd</td>
                                <td>@item.CariSoyad</td>
                                <td>@item.CariMail</td>
                                <td>@item.CariSehir</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
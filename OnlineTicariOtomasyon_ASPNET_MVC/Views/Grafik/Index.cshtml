
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h2>Index</h2>
@{ 
    var grafik = new Chart(width: 500, height: 500);
    grafik.AddTitle(text: "Kategori ve Ürün Sayıları");
    grafik.AddLegend(title:"Değerler");
    grafik.AddSeries(
        name: "Veriler", 
        chartType:"Bar",
        xValue:new[] {"Beyaz Eşya","Telefon","Küçük Ev Aleti","Bilgisayar","XBOX"},
        yValues:new[] {500,250,340,620,222}
        );
    grafik.Write();
}
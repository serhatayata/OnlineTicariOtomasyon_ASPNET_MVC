@{
    ViewBag.Title = "DepartmanGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model OnlineTicariOtomasyon_ASPNET_MVC.Models.Siniflar.Departman
<link href="~/Content/style.css" rel="stylesheet" />
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Scripts/SweetAlertGuncelle.js"></script>
<br />
<h2>Departman Güncelleme</h2>
<hr />
@using (@Html.BeginForm("DepartmanGuncelle", "Departman", FormMethod.Post))
{
    <div class="form-group">
        <label class="labelAciklama">Departman ID</label>
        @Html.TextBoxFor(x => x.DepartmanID, new { @class = "form-control", @readonly = "readonly" })
        <label class="labelAciklama">Departman Ad</label>
        @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button runat="server" class="btn btn-primary btn-block" onclick="return conFunction(this);">
            Güncelle
        </button>
    </div>
}

@model OnlineTicariOtomasyon_ASPNET_MVC.Models.Siniflar.Urunler
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link href="~/Content/style.css" rel="stylesheet" />
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Scripts/SweetAlertEkle.js"></script>
<br />
<h2>Yeni Ürün Sayfası</h2>
<hr />
<form class="form-group" method="POST">
    <div class="form-group">
        <label class="labelAciklama">Ürün Adı </label>
        @Html.TextBoxFor(x => x.UrunAd, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label class="labelAciklama">Marka</label>
        @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label class="labelAciklama">Stok</label>
        @Html.TextBoxFor(x => x.Stok, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label class="labelAciklama">Alış Fiyat</label>
        @Html.TextBoxFor(x => x.AlisFiyati, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label class="labelAciklama">Satış Fiyat</label>
        @Html.TextBoxFor(x => x.SatisFiyati, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label class="labelAciklama">Kategori</label>
        @*@Html.TextBoxFor(x => x.KategoriID, new { @class = "form-control" })*@
        @Html.DropDownListFor(x => x.KategoriID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label class="labelAciklama">Ürün Görsel </label>
        @Html.TextBoxFor(x => x.UrunGorsel, new { @class = "form-control", @placeholder = "Ürün görsel URL'si" })
    </div>
    <div class="form-group">
        @Html.HiddenFor(x => x.Durum)
    </div>
    <br />
    <button id="Button3" runat="server" class="btn btn-primary btn-block" onclick="return conFunction(this);">Kaydet</button>
</form>


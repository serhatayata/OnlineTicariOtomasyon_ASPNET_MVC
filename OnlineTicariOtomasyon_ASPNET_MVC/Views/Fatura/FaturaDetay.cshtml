
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using OnlineTicariOtomasyon_ASPNET_MVC.Models.Siniflar
@model List<FaturaKalem>
<br />
<div class="container-fluid">
    <h2>Fatura Kalemleri Sayfası</h2>
    <hr />
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Toplam Adet : @ViewBag.ToplamSayi</li>
    </ol>
    <table class="table table-hover" id="tbl1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Açıklama</th>
                <th>Miktar</th>
                <th>Birim Fiyat</th>
                <th>Tutar</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FaturaKalemID</td>
                    <td>@item.Aciklama</td>
                    <td>@item.Miktar</td>
                    <td>@item.BirimFiyat ₺</td>
                    <td>@item.Tutar ₺</td>
                    <td><a class="btn btn-success" onclick="location.href='@Url.Action("FaturaKalemGuncelle","Fatura",new { id=item.FaturaKalemID })'" >Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" href="/Fatura/YeniKalem/@Model[0].FaturaID">Fatura Kalem Girişi</a>
</div>



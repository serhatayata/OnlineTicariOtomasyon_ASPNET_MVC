@using OnlineTicariOtomasyon_ASPNET_MVC.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
<h2>Sipariş Geçmişim</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Ürün Adı</th>
        <th>Ürün Adet</th>
        <th>Fiyat</th>
        <th>Toplam Tutar</th>
        <th>Tarih</th>
    </tr>
     @foreach (var item in Model)
     {
         <tr>
             <td>@item.Urunler.UrunAd</td>
             <td>@item.Adet</td>
             <td>@item.Fiyat</td>
             <td>@item.ToplamTutar</td>
             <td>@item.Tarih.ToString("dd/MM/yyy")</td>
         </tr>
     }
</table>

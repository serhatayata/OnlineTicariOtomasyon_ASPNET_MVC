
@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

@using OnlineTicariOtomasyon_ASPNET_MVC.Models.Siniflar
@model List<KargoDetay>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/Scripts/SweetAlertSil.js"></script>

<div class="container-fluid tbl_kargo">
    <br />
    @using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
    {
        <p>
            Kargo Takip Numarası : @Html.TextBox("p", "", new { @style = "font-size:15px" })
            <input type="submit" value="Ara" />
        </p> 
    }
    <br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Kargo Takip Kodu</th>
                <th>Personel</th>
                <th>Alıcı</th>
                <th>Tarih</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TakipKodu</td>
                    <td>@item.Personel</td>
                    <td>@item.Alici</td>
                    <td>@item.Tarih.ToString("d")</td>
                    <td><a href="/CariPanel/CariKargoDetay/@item.TakipKodu" class="btn btn-success btn-block">Detaylar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>




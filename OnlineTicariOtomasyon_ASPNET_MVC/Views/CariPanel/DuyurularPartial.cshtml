@using OnlineTicariOtomasyon_ASPNET_MVC.Models.Siniflar
@model List<Mesajlar> 

@foreach (var item in Model)
{
<div class="timeline timeline-inverse">
    <!-- timeline time label -->
    <div class="time-label">
        <span class="bg-warning">
            @item.Tarih.ToShortDateString()
        </span>
    </div>
    <!-- /.timeline-label -->
    <!-- timeline item -->
    <div>
            <i class="fas fa-envelope fa-2x bg-light"></i>
        <div class="timeline-item">
            <h3 class="timeline-header">@item.Konu</h3>
            <div class="timeline-body">
               @item.Icerik
            </div>
        </div>
    </div>
</div>
}
